<Window x:Class="SysMaven.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SysMaven"
        mc:Ignorable="d"
        Title="SysMaven" Height="580" Width="815" ResizeMode="NoResize" Icon="/Compteur.png" WindowStartupLocation="CenterScreen">

    <Grid Background="#7FCFD8DD">

        <Rectangle
            Fill="#FFE74C3C"
            Height="32"
            Width="815"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Stroke="#FFCFD8DD" />
        <Label
            x:Name="infoMsg"
            MouseDown="InfoMsg_MouseDown"
            Content="Info : Mise à jour de sécurité disponible !"
            Height="37"
            Width="815"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            FontWeight="Bold"
            FontSize="20"
            Foreground="White"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="0,-5,0,0"/>

        <Label
            Content="SysMaven Activity Monitor"
            Height="52"
            Width="805"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="0,37,0,0"
            FontWeight="Bold"
            FontSize="32"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>

        <Rectangle
            Height="90"
            Width="782"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Stroke="#FFCFD8DD"
            Margin="0,94,0,0"
            Fill="Transparent"/>
        <Label
            Content="System Informations :"
            Height="45"
            Width="268"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="16,89,0,0"
            FontWeight="Bold"
            FontSize="25"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>
        <Label
            Content="Operating System :"
            Height="30"
            Width="379"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="29,127,0,0"           
            FontSize="15"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>
        <Label
            Content="Architecture :"
            Height="28"
            Width="379"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="29,151,0,0"           
            FontSize="15"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>
        <Label
            Content="CPU :"
            Height="30"
            Width="390"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="408,127,0,0"           
            FontSize="15"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>
        <Label
            Content="GPU :"
            Height="28"
            Width="390"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            Margin="408,151,0,0"           
            FontSize="15"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FF37474F"/>

        <Rectangle
            Height="295"
            Width="250"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stroke="#FFCFD8DD"
            Margin="9,198,0,0"
            Fill="Transparent"/>
        <Image
            Height="235"
            Width="236"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="16,206,0,0"
            Source="/Compteur.png"/>
        <Image 
            x:Name="needle"
            HorizontalAlignment="Left"
            Height="70" Margin="82,272,0,0"
            VerticalAlignment="Top"
            Width="70" Source="Aiguille.png"
            RenderTransformOrigin="0.738,0.733">
            <Image.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-90"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Image.RenderTransform>
        </Image>
        <Label
            Content="CPU"           
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Margin="16,368,551,138"
            FontWeight="Bold"
            FontSize="32"
            RenderTransformOrigin="0.501,0.01"
            Foreground="#FFCFD8DD" Padding="0,0,0,0"/>
        <Label
            x:Name="cpu"
            Content="0,00%"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            FontWeight="Bold"
            FontSize="30"
            Foreground="#FF37474F"
            Margin="10,448,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" ScrollViewer.CanContentScroll="True" Padding="0,0,0,0" Height="45" Width="248"/>






        <Rectangle
            Height="295"
            Width="250"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Stroke="#FFCFD8DD"
            Margin="0,198,0,0"
            Fill="Transparent"/>
        <Rectangle
            Height="295"
            Width="250"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Stroke="#FFCFD8DD"
            Margin="540,198,0,0"
            Fill="Transparent"/>


    </Grid>
</Window>
